<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        
        <variable
            name="cardInfo"
            type="org.zz.bean.IDCardRecord" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:padding="30dp"
            android:background="@drawable/bg_blackline"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="提示"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/timeTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="20220906  12:01:23"/>
            <TextView
                android:id="@+id/weiTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="微模自动授权成功"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/fingerTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="指纹仪连接成功"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/cameraTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="摄像头连接成功"/>

        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="微模块演示程序"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/HomeSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:onClick="OnClickSetting"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <Button
            android:id="@+id/btnReadVerify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="读取核验信息"
            app:layout_constraintTop_toTopOf="@id/cardMsg"
            app:layout_constraintBottom_toBottomOf="@id/cardMsg"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/btnReadFull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="读取全部信息"
            app:layout_constraintStart_toStartOf="@id/btnReadVerify"
            app:layout_constraintTop_toBottomOf="@id/btnReadVerify"/>

        <Button
            android:visibility="gone"
            android:id="@+id/btnHealthVerify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="核验健康状态"
            app:layout_constraintTop_toBottomOf="@id/btnReadFull"
            app:layout_constraintStart_toStartOf="@id/btnReadFull"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardMsg"
            android:layout_width="500dp"
            android:layout_height="300dp"
            android:background="#BDBDBD"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title">
            <LinearLayout
                android:id="@+id/nameLinear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintStart_toStartOf="parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="姓名："/>
                <TextView
                    android:id="@+id/nameTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="@{cardInfo.name}"/>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/birLinear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/nameLinear"
                app:layout_constraintStart_toStartOf="@id/nameLinear">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="出生："/>
                <TextView
                    android:id="@+id/birTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="@{cardInfo.birthday}"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/numLinear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/birLinear"
                app:layout_constraintStart_toStartOf="@id/birLinear">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="公民身份证号码："/>
                <TextView
                    android:id="@+id/numTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="@{cardInfo.cardNumber}"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/timeLinear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/numLinear"
                app:layout_constraintStart_toStartOf="@id/numLinear">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="有效期："/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/timeTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="@{cardInfo.validateStart+`——`+cardInfo.validateEnd}"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/imageIdcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:contentDescription="身份证"
                android:src="@drawable/card"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="300dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical"
            android:background="@drawable/bg_blackline"
            app:layout_constraintTop_toTopOf="@id/cardMsg"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/finger1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="指纹1:"/>
            <TextView
                android:id="@+id/finger2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="指纹2:"/>

        </LinearLayout>


        <Button
            android:visibility="gone"
            android:id="@+id/btnFaceVerify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    核验人脸    "
            app:layout_constraintStart_toStartOf="@id/btnReadVerify"
            app:layout_constraintTop_toTopOf="@id/result"/>

        <Button
            android:visibility="gone"
            android:id="@+id/btnFingerVerify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    核验指纹    "
            app:layout_constraintTop_toBottomOf="@id/btnFaceVerify"
            app:layout_constraintStart_toStartOf="@id/btnFaceVerify"/>

        <TextView
            android:id="@+id/result"
            android:layout_width="500dp"
            android:layout_height="140dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_blackline"
            android:text="操作结果"
            app:layout_constraintTop_toBottomOf="@id/cardMsg"
            app:layout_constraintStart_toStartOf="@id/cardMsg"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>